<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-bind="http://www.vue.org/v-bind"
    xmlns:v-on="http://www.vue.org/v-bind"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="cshm.content">
<body>

<metal:javascriptslot fill-slot="javascript_head_slot">
</metal:javascriptslot>

<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">
<style>
.deepblue{
    background: #307bb3;
    color: white;
}
td{
    text-align: center;
    vertical-align: middle !important;
}
table{
    margin-bottom: 20px;
}
.header{
    font-size: 20px;
    background: #3d84a8;
    color: white;
}
</style>

  <table>
    <tr class='deepblue'>
      <td colspan='12' style='font-size: 22px'>${view/course_name}      ${view/time}</td>
    </tr>
    <tr class='header'>
      <td>單位</td>
      <td>姓名/身份證</td>
      <td>報名日期</td>
      <td>聯絡狀況</td>
      <td>上課狀況</td>
      <td>繳費狀況</td>
      <td>折扣</td>
      <td>發Mail</td>
      <td>刪除</td>
      <td>轉出</td>
      <td>收據輔助</td>
      <td>轉介</td>
    </tr>
    <tr tal:repeat="user view/result" >
      <tal:define define="obj python: dict(user)">
        <td>${python: obj['company_name']}</td>
        <td>${python: '%s/%s' %(obj['name'], obj['studId'])}</td>
        <td>${python: obj['apply_time'].strftime('%Y-%m-%d')}</td>
        <td>${python: ''}</td>
        <td>${python: ''}</td>
        <td>${python: '繳費狀況'}</td>
        <td>${python: obj['training_hour']}</td>
        <td>${python: 'send mail'}</td>
        <td>${python: ''}</td>
        <td>${python: ''}</td>
        <td>${python: ''}</td>
        <td>${python: ''}</td>
      </tal:define>
    </tr>
  </table>
</metal:content-core>
</metal:content-core>

</body>
</html>
