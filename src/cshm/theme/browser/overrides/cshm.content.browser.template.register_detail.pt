<script>
$(function(){
  checkTitle = function(){
    title = $('input[name="title"]').val()
    if(title.slice(-1) != '期' && title != '新增課程'){
        alert('請期別結尾加上"期" ex: 123期')
        return false
    }else{
        return confirm('確定要更新麻?')
    }
  }
  $('#enableEdit').click(function(){
    $('.edit').show()
    $('.edit').siblings().hide()
    $('p.edit input').show()
    $('#cancel_edit').show()
    $('#send').show()
    $('label.edit').css('display', 'inline-flex')
  })
  $('#cancel_edit').click(function(){
    $('.edit').hide()
    $('.edit').siblings().show()
    $('p.edit input').hide()
    $('#cancel_edit').hide()
    $('#send').hide()
    $('label.edit').hide()
    event.preventDefault()
  })
})
</script>

