<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vue.org/v-on"
    xmlns:v-bind="http://vue.org/v-bind"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="cshm.content">
<body>


<metal:style fill-slot="style_slot">
</metal:style>
<metal:js fill-slot="javascript_head_slot">
    <script type="text/javascript" src="${portal_url}/++plone++cshm.theme/backend.js"></script>
</metal:js>

<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<h4>批次修改個人資訊</h4>
<table style="width:100%;table-layout: auto;">
  <tr>
    <td style="width:5%">座號</td>
    <td style="width:10%">姓名</td>
    <td style="width:10%">電話</td>
    <td style="width:10%">手機</td>
    <td style="width:10%">生日</td>
    <td style="width:15%">個人email</td>
    <td style="width:35%">聯絡記錄</td>
    <td style="width:5%">更新</td>
  </tr>

  <tr tal:repeat="item view/result">
    <td style="width:5%">${item/seatNo}</td>
    <td style="width:10%">${item/name}</td>
    <td style="width:10%"><input style="width:100%" v-model="phone__${item/id}"></td>
    <td style="width:10%"><input style="width:100%" v-model="cellphone__${item/id}"></td>
    <td style="width:10%"><input type="date" style="width:100%" v-model="birthday__${item/id}"></td>
    <td style="width:15%"><input style="width:100%" v-model="priv_email__${item/id}"></td>
    <td style="width:35%"><input style="width:100%" v-model="contactLog__${item/id}"></td>
    <td style="width:5%"><a v-on:click="update(${item/id})" href="javascript:void(0)">更新</a></td>
  </tr>
</table>

<script>
var app = new Vue({
    el: '#content-core',
    data: {
      message: 'Hello Vue!',
<tal:item repeat="item view/result">
      phone__${item/id}: '${item/phone}',
      cellphone__${item/id}: '${item/cellphone}',
      birthday__${item/id}: '${item/birthday}',
      priv_email__${item/id}: '${item/priv_email}',
      contactLog__${item/id}: '',
</tal:item>
    },
    methods: {
      update:function(id){
        data = {
           id: id,
           phone: this['phone__' + id],
           cellphone: this['cellphone__' + id],
           birthday: this['birthday__' + id],
           priv_email: this['priv_email__' + id],
           contactLog: this['contactLog__' + id],
           update: 1,
        }
        $.post(
           '${context/absolute_url}/@@batch_update_reg_person_info',
           data=data,
        ).done(function(respon){
            $().toastmessage('showSuccessToast', '更新成功');
            app['contactLog__' + id] = ''
        }).fail(function(respon){
            $().toastmessage('showErrorToast', '更新失敗，請稍候再試，若持續失敗，請聯絡系統管理員');
        })
      }
    }
})
</script>

</metal:content-core>
</metal:content-core>

</body>
</html>
